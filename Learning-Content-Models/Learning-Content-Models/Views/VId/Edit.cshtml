@model Learning_Content_Models.Models.Vid

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit Vidovete</h2>
<form method="post" asp-action="Edit" asp-controller="Vid">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="StudyMaterials"></label>
        <input asp-for="StudyMaterials" asp-items="@(new SelectList(ViewBag.StudyMaterials,"Title"))"
               class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Update</button>
</form>
